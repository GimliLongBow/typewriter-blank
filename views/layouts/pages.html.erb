<!DOCTYPE html>
<html lang="en">
<head>
	<!-- LAYOUT pages.html.erb -->
	<%= page_title(@page, 'Ronningen Design', ',') %>
	<%= meta_tags(:html5 => true) %>
	<%= description(@page) %>
	<%= key_phrases(@page) %>

	<!-- OpenGraph Helpers -->
	<%= og_description(@page) %>
	<%= og_title(@page) %>
	<%= og_image(@page, "/themes/typewriter-blank/images/og-logo.jpg") %>

	<%= render :partial => '/shared/stylesMeta' %>
</head>
<body id="<%= @page.friendly_id %>" class="<%= @current_action %> <%= @current_controller %>">
	<div id="wrapper">
		<%= render :partial => '/shared/header' %>

		<section class="global">
			<%= yield %>
		</section>

		<%= render :partial => '/shared/aside' %>

		<%= render :partial => '/shared/footer' %>

		<%= render :partial => '/shared/scripts' %>
	</div><!-- end #wrapper -->
</body>
</html>